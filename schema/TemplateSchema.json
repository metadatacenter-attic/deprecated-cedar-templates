{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "CEDAR Template Schema Schema",
    "description": "A schema that describes a CEDAR template schema",
    "definitions": {
        "coreJSONSchemaFields": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "type": "object",
            "title": "CEDAR Core Template Schema Schema",
            "description": "A schema that describes core CEDAR template schema fields",
            "properties": {
                "$schema": {
                    "type": "string",
                    "format": "uri",
                    "enum": [ "http://json-schema.org/draft-04/schema#" ]
                },
                "type": {
                    "type": "string",
                    "enum": [ "object" ]
                },
                "title": {
                    "type": "string",
                    "minLength": 1
                },
                "description": {
                    "type": "string",
                    "minLength": 1
                },
                "additionalProperties": {
                    "type": "boolean",
                    "enum": [ false ]
                },
                "required": {
                    "type": "array",
                    "minItems": 3,
                    "maxItems": 3,
                    "items": [
                        {
                            "type": "string",
                            "enum": [ "@type" ]
                        },
                        {
                            "type": "string",
                            "enum": [ "@id" ]
                        },
                        {
                            "type": "string",
                            "enum": [ "_templateId" ]
                        }
                    ],
                    "uniqueItems": true
                }
            },
            "required": [
                "$schema",
                "type",
                "title",
                "description",
                "properties",
                "additionalProperties",
                "required"
            ]
        },
        "templateUIField": {
            "type": "object",
            "title": "CEDAR schema for _ui field in a template",
            "description": "A schema that describes a CEDAR _ui field in a template",
            "properties": {
                "description": { "type": "string" },
                "title": { "type": "string" },
                "order": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "format": "uri"
                    },
                    "uniqueItems": true
                }
            },
            "required": [ "title", "description", "order" ]
        },
        "templateElementUIField": {
            "type": "object",
            "title": "CEDAR schema for _ui field in a template element",
            "description": "A schema that describes a CEDAR _ui field in a template element",
            "properties": {
                "order": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                }
            },
            "required": [ "title", "description",  "order" ]
        },
        "templateFieldUIField": {
            "type": "object",
            "title": "CEDAR schema for _ui field in a template field",
            "description": "A schema that describes a CEDAR _ui field in a template field",
            "properties": {
                "description": { "type": "string" },
                "title": { "type": "string" },
                "inputType": { "type": "string", "enum": [ "textfield", "textarea" ] }
            },
            "required": [ "description", "title", "inputType" ]
        },
        "jsonLDTypeField" : {
            "type": "object",
            "title": "CEDAR schema for JSON-LD @type field in a template",
            "description": "A schema that describes a JSON-LD @type field in a template",
            "properties": {
                "@id": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [ "@type" ]
        },
        "jsonLDIDField" : {
            "type": "object",
            "title": "CEDAR schema for JSON-LD @id field in a template",
            "description": "A schema that describes a JSON-LD @id field in a template",
            "properties": {
                "@id": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [ "@id" ]
        },
        "templateJSONLDTypeField" : {
            "type": "object",
            "title": "CEDAR schema for template JSON-LD @type field",
            "description": "A schema that describes a template's JSON-LD @type field",
            "properties": {
                "@type": {
                    "type": "string",
                    "format": "uri",
                    "enum": [ "https://schema.metadatacenter.org/core/Template" ]
                }
            },
            "required": [ "@type" ]
        },
        "templateElementJSONLDTypeField" : {
            "type": "object",
            "title": "CEDAR schema for template element JSON-LD @type field",
            "description": "A schema that describes a template element's JSON-LD @type field",
            "properties": {
                "@type": {
                    "type": "string",
                    "format": "uri",
                    "enum": [ "https://schema.metadatacenter.org/core/TemplateElement" ]
                }
            },
            "required": [ "@type" ]
        },
        "templateFieldJSONLDTypeField" : {
            "type": "object",
            "title": "CEDAR schema for template field JSON-LD @type field",
            "description": "A schema that describes a template field's JSON-LD @type field",
            "properties": {
                "@type": {
                    "type": "string",
                    "format": "uri",
                    "enum": [ "https://schema.metadatacenter.org/core/TemplateField" ]
                }
            },
            "required": [ "@type" ]
        },
        "templateFieldObject": {
            "allOf": [
                { "$ref": "#/definitions/coreJSONSchemaFields" },
                { "$ref": "#/definitions/templateFieldJSONLDTypeField" },
                { "$ref": "#/definitions/jsonLDIDField" },
                { "_ui": { "$ref": "#/definitions/templateFieldUIField" } },
                { "properties":
                  {             
                      "properties": {
                          "type": "object",
                          "additionalProperties": {
                              "type": "object"
                          },
                          "minProperties": 1
                      }
                  },
                  "required": [ "_ui" ]
                }
            ]
        },
        "templateElementObject": {
            "allOf": [
                { "$ref": "#/definitions/coreJSONSchemaFields" },
                { "$ref": "#/definitions/templateElementJSONLDTypeField" },
                { "$ref": "#/definitions/jsonLDIDField" },
                { "_ui": { "$ref": "#/definitions/templateElementUIField" } },
                { "properties":
                  {             
                      "properties": {
                          "type": "object",
                          "additionalProperties": {
                              "type": "object"
                          },
                          "minProperties": 1
                      }
                  },
                  "required": [ "_ui" ]
                }
            ]
        },
        "templateObject": {
            "allOf": [
                { "$ref": "#/definitions/coreJSONSchemaFields" },
                { "$ref": "#/definitions/templateJSONLDTypeField" },
                { "$ref": "#/definitions/jsonLDIDField" },
                { "_ui": { "$ref": "#/definitions/templateUIField" } },
                { "properties":
                  {             
                      "properties": {
                          "type": "object",
                          "additionalProperties": {
                              "type": "object"
                          },
                          "minProperties": 1
                      }
                  },
                  "required": [ "_ui" ]
                }
            ]
        }
    },
    "oneOf": [
        { "$ref": "#/definitions/templateObject" },
        { "$ref": "#/definitions/templateElementObject" },
        { "$ref": "#/definitions/templateFieldObject" }
    ]
}
