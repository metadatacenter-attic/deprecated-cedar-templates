{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "CEDAR Template Schema Schema",
    "description": "A schema that describes a CEDAR template schema",
    "definitions": {
        "coreJSONSchemaFields": {
            "type": "object",
            "title": "CEDAR Core JSON Schema fields schema",
            "description": "A schema that describes core CEDAR JSON Schema fields schema",
            "properties": {
                "$schema": {
                    "type": "string",
                    "format": "uri",
                    "enum": [ "http://json-schema.org/draft-04/schema#" ]
                },
                "type": {
                    "type": "string",
                    "enum": [ "object" ]
                },
                "title": {
                    "type": "string",
                    "minLength": 1
                },
                "description": {
                    "type": "string",
                    "minLength": 1
                },
                "additionalProperties": {
                    "type": "boolean",
                    "enum": [ false ]
                },
            },
            "required": [
                "$schema",
                "type",
                "title",
                "description",
                "properties",
                "additionalProperties"
            ]
        },
        "coreJSONSchemaTemplateFields": {
            "type": "object",
            "title": "CEDAR Core JSON Schema Template fields schema",
            "description": "A schema that describes core CEDAR JSON Schema Template fields schema",
            "allOf": [
                { "$ref": "#/definitions/coreJSONSchemaFields" },
                { "properties":
                  {
                      "required": {
                          "type": "array",
                          "minItems": 2,
                          "maxItems": 2,
                          "items": [
                              {
                                  "type": "string",
                                  "enum": [ "@id" ]
                              },
                              {
                                  "type": "string",
                                  "enum": [ "_templateId" ]
                              }
                          ],
                          "uniqueItems": true
                      }
                  },
                  "required": [
                      "required"
                  ]
                }
            ]
        },
        "coreJSONSchemaTemplateElementFields": {
            "type": "object",
            "title": "CEDAR Core JSON Schema Template Element fields schema",
            "description": "A schema that describes core CEDAR JSON Schema Template Element fields schema",
            "allOf": [
                { "$ref": "#/definitions/coreJSONSchemaFields" },
                { "properties":
                  {
                      "required": {
                          "type": "array",
                          "minItems": 1,
                          "items": [
                              {
                                  "type": "string",
                                  "enum": [ "@id" ]
                              }
                          ],
                          "uniqueItems": true
                      }
                  },
                  "required": [
                      "required"
                  ]
                }
            ]
        },
        "coreJSONSchemaTemplateFieldFields": {
            "type": "object",
            "title": "CEDAR Core JSON Schema Template Field fields schema",
            "description": "A schema that describes core CEDAR JSON Schema Template Field fields schema",
            "allOf": [
                { "$ref": "#/definitions/coreJSONSchemaFields" },
                { "properties":
                  {
                      "required": {
                          "type": "array",
                          "minItems": 1,
                          "items": [
                              {
                                  "type": "string",
                                  "enum": [ "@id" ]
                              }
                          ],
                          "uniqueItems": true
                      }
                  },
                  "required": [
                      "required"
                  ]
                }
            ]
        },
        "provenanceFields": {
            "type": "object",
            "title": "CEDAR provenance fields schema",
            "description": "A schema that describes CEDAR provenance fields schema",
            "properties": {
                "pav:createdOn": {
                    "type": "string",
                    "format": "date-time"
                },
                "pav:createdBy": {
                    "type": "string",
                    "format": "uri"
                },
                "pav:lastUpdatedOn": {
                    "type": "string",
                    "format": "date-time"
                },
                "cedar:lastUpdatedBy": {
                    "type": "string",
                    "format": "uri"
                }
            }
        },
        "templateUIField": {
            "type": "object",
            "title": "CEDAR schema for _ui field in a template",
            "description": "A schema that describes a CEDAR _ui field in a template",
            "properties": {
                "description": { "type": "string" },
                "title": { "type": "string" },
                "order": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                }
            },
            "required": [ "title", "description", "order" ]
        },
        "valueConstraintsField": {
            "type": "object",
            "title": "CEDAR schema for a CEDAR _valueConstraints field in a template field",
            "description": "A schema that describes a CEDAR _valueConstraints field in a template",
            "properties": {
                "ontologies": { "type": "array" },
                "valueSets": { "type": "array" },
                "classes": { "type": "array" },
                "branches": { "type": "array" },
                "requiredValue": { "type": "boolean" }
            },
            "required": [ "requiredValue" ]
        },
        "templateElementUIField": {
            "type": "object",
            "title": "CEDAR schema for _ui field in a template element",
            "description": "A schema that describes a CEDAR _ui field in a template element",
            "properties": {
                "order": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                }
            },
            "required": [ "title", "description",  "order" ]
        },
        "templateFieldUIField": {
            "type": "object",
            "title": "CEDAR schema for _ui field in a template field",
            "description": "A schema that describes a CEDAR _ui field in a template field",
            "properties": {
                "description": { "type": "string" },
                "title": { "type": "string" },
                "inputType": { "type": "string", "enum": [ "textfield", "textarea" ] }
            },
            "required": [ "description", "title", "inputType" ]
        },
        "templateJSONLDContextField" : {
            "type": "object",
            "title": "CEDAR schema for JSON-LD @context field",
            "description": "A schema that describes a JSON-LD @context field",
            "properties": {
                "@context": {
                    "type": "object"
                }
            },
            "required": [ "@context" ]
        },
        "templateElementJSONLDContextField" : {
            "type": "object",
            "title": "CEDAR schema for JSON-LD @context field",
            "description": "A schema that describes a JSON-LD @context field",
            "properties": {
                "@context": {
                    "type": "context"
                }
            },
            "required": [ "@context" ]
        },
        "templateFieldJSONLDContextField" : {
            "type": "object",
            "title": "CEDAR schema for JSON-LD @context field",
            "description": "A schema that describes a JSON-LD @context field",
            "properties": {
                "@context": {
                    "type": "object"
                }
            },
            "required": [ "@context" ]
        },
        "jsonLDTypeField" : {
            "type": "object",
            "title": "CEDAR schema for JSON-LD @type field",
            "description": "A schema that describes a JSON-LD @type field",
            "properties": {
                "@type": {
                    "type": "string", "format": "uri"
                }
            },
            "required": [ "@type" ]
        },
        "jsonLDIDField" : {
            "type": "object",
            "title": "CEDAR schema for JSON-LD @id field",
            "description": "A schema that describes a JSON-LD @id field",
            "properties": {
                "@id": {
                    "type": "string", "format": "uri"
                }
            },
            "required": [ "@id" ]
        },
        "templateJSONLDTypeField" : {
            "type": "object",
            "title": "CEDAR schema for template JSON-LD @type field",
            "description": "A schema that describes a template's JSON-LD @type field",
            "properties": {
                "@type": {
                    "type": "string",
                    "format": "uri",
                    "enum": [ "https://schema.metadatacenter.org/core/Template" ]
                }
            },
            "required": [ "@type" ]
        },
        "templateElementJSONLDTypeField" : {
            "type": "object",
            "title": "CEDAR schema for template element JSON-LD @type field",
            "description": "A schema that describes a template element's JSON-LD @type field",
            "properties": {
                "@type": {
                    "type": "string",
                    "format": "uri",
                    "enum": [ "https://schema.metadatacenter.org/core/TemplateElement" ]
                }
            },
            "required": [ "@type" ]
        },
        "templateFieldJSONLDTypeField" : {
            "type": "object",
            "title": "CEDAR schema for template field JSON-LD @type field",
            "description": "A schema that describes a template field's JSON-LD @type field",
            "properties": {
                "@type": {
                    "type": "string",
                    "format": "uri",
                    "enum": [ "https://schema.metadatacenter.org/core/TemplateField" ]
                }
            },
            "required": [ "@type" ]
        },
        "templateField": {
            "allOf": [
                { "$ref": "#/definitions/coreJSONSchemaTemplateFieldFields" },
                { "$ref": "#/definitions/templateFieldJSONLDContextField" },
                { "$ref": "#/definitions/templateFieldJSONLDTypeField" },
                { "$ref": "#/definitions/jsonLDIDField" },
                { "_ui": { "$ref": "#/definitions/templateFieldUIField" } },
                { "_valueConstraints": { "$ref": "#/definitions/valueConstraintsField" } },
                { "properties":
                  {             
                      "properties": {
                          "type": "object",
                          "properties": {
                              "@type": { "type": "object" },
                              "_value": { "type": "object" }
                          }
                      },
                      "required":  {
                          "type": "array", "minItems": 1, "maxItems": 1,
                          "items": { "type": "string", "enum": [ "_value" ] }
                      },

                  },
                  "required": [ "@type", "@id", "_ui", "properties", "required" ]
                }
            ]
        },
        "templateElement": {
            "allOf": [
                { "$ref": "#/definitions/coreJSONSchemaTemplateElementFields" },
                { "$ref": "#/definitions/templateElementJSONLDContextField" },
                { "$ref": "#/definitions/templateElementJSONLDTypeField" },
                { "$ref": "#/definitions/jsonLDIDField" },
                { "_ui": { "$ref": "#/definitions/templateElementUIField" } },
                { "properties":
                  {             
                      "properties": {
                          "type": "object",
                          "properties": {

                          }
                      }
                  },
                  "required": [ "@context", "@type", "@id", "_ui" ]
                }
            ]
        },
        "templateFieldOrElement": {
            "oneOf": [
                { "$ref": "#/definitions/templateField" },
                { "$ref": "#/definitions/templateElement" }
            ]
        },
        "template": {
            "allOf": [
                { "$ref": "#/definitions/coreJSONSchemaTemplateFields" },
                { "$ref": "#/definitions/templateJSONLDContextField" },
                { "$ref": "#/definitions/templateJSONLDTypeField" },
                { "$ref": "#/definitions/jsonLDIDField" },
                { "_ui": { "$ref": "#/definitions/templateUIField" } },
                { "$ref": "#/definitions/provenanceFields" },
                {
                    "properties":
                    {             
                        "properties":
                        {
                            "type": "object",
                            "properties":
                            {
                                "@id": { "type": "object" },
                                "@type": { "type": "object" },
                                "_templateId": { "type": "object" }
                            },
                            "patternProperties": {
                                "^(?!@id)(?!@type)(?!_templateId).*$": { "$ref": "#/definitions/templateField" }
                            }
                        }
                    },
                    "required": [ "_ui" ]
                }
            ]
        }
    },
    "oneOf": [
        { "$ref": "#/definitions/template" }
    ]
}
