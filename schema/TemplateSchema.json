{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "CEDAR Template Schema Schema",
    "description": "A schema that describes a CEDAR template schema; INCOMPLETE - awating cleanup of _ui field",

    "definitions": {
        "coreJSONSchemaFields": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "type": "object",
            "title": "CEDAR Core Template Schema Schema",
            "description": "A schema that describes core CEDAR template schema fields",
            "properties": {
                "$schema": {
                    "type": "string",
                    "format": "uri",
                    "enum": [ "http://json-schema.org/draft-04/schema#" ]
                },
                "type": {
                    "type": "string",
                    "enum": [ "object" ]
                },
                "title": {
                    "type": "string",
                    "minLength": 1
                },
                "description": {
                    "type": "string",
                    "minLength": 1
                },
                "required": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "format": "string"
                    },
                    "uniqueItems": true
                }
            },
            "required": [
                "$schema",
                "type",
                "title",
                "description",
                "properties",
                "additionalProperties",
                "required"
            ]
        },
        "templateUIField": {
            "type": "object",
            "title": "CEDAR schema for _ui field in a template",
            "description": "A schema that describes a CEDAR _ui field in a template",
            "properties": {
                "pages": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "format": "uri"
                    },
                    "uniqueItems": true
                }
            },
            "required": [ "pages" ]
        },
        "templateElementUIField": {
            "type": "object",
            "title": "CEDAR schema for _ui field in a template element",
            "description": "A schema that describes a CEDAR _ui field in a template element",
            "properties": {
                "order": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                }
            },
            "required": [ "description", "title" ]
        },
        "templateFieldUIField": {
            "type": "object",
            "title": "CEDAR schema for _ui field in a template field",
            "description": "A schema that describes a CEDAR _ui field in a template field",
            "properties": {
                "description": { "type": "string" },
                "title": { "type": "string" },
                "inputType": { "type": "string" },
                "createdAt": { "type": "object" }
            },
            "required": [ "description", "title" ]
        },
        "jsonLDTypeField" : {
            "type": "object",
            "title": "CEDAR schema for LSON-LD @type field in a template",
            "description": "A schema that describes a JSON-LD @type field in a template",
            "properties": {
                "@id": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [ "@type" ]
        },
        "jsonLDIDField" : {
            "type": "object",
            "title": "CEDAR schema for LSON-LD @id field in a template",
            "description": "A schema that describes a JSON-LD @id field in a template",
            "properties": {
                "@id": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [ "@id" ]
        },
        "templateFieldObject": {
            "allOf": [
                { "$ref": "#/definitions/coreJSONSchemaFields" },
                { "$ref": "#/definitions/jsonLDIDField" },
                { "_ui": { "$ref": "#/definitions/templateFieldUIField" } },
                { "properties": {             
                    "properties": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object"
                        },
                        "minProperties": 1
                    }
                }
                }
            ]
        },
        "templateElementObject": {
            "allOf": [
                { "$ref": "#/definitions/coreJSONSchemaFields" },
                { "$ref": "#/definitions/jsonLDIDField" },
                { "_ui": { "$ref": "#/definitions/templateElementUIField" } },
                { "properties": {             
                    "properties": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object"
                        },
                        "minProperties": 1
                    }
                }
                }
            ]
        },
        "templateObject": {
            "allOf": [
                { "$ref": "#/definitions/coreJSONSchemaFields" },
                { "$ref": "#/definitions/jsonLDIDField" },
                { "_ui": { "$ref": "#/definitions/templateUIField" } },
                { "properties": {             
                    "properties": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object"
                        },
                        "minProperties": 1
                    }
                }
                }
            ]
        }
    },
    "oneOf": [  { "$ref": "#/definitions/templateObject" }    ]
}
