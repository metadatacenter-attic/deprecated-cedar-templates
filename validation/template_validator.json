                "pav": { "type": "string", "format": "uri", "enum": [ "http://purl.org/pav/" ] },
                "cedar": { "type": "string", "format": "uri", "enum": [ "https://schema.metadatacenter.org/core/" ] }
            },
            "patternProperties": {
                "^(?!pav)(?!cedar).*$": { "type": "string", "format": "uri" }
