        },
        "contextFieldContent": {
            "description": "Schema that describes the schema of a '@context' field in a 'properties' field in a template or element",
            "type": "object",
            "properties": {
                "properties": {
                    "type": "object",
                    "description": "Each field will have a name followed by an enum specifying the URI corresponding to that name",
                    "patternProperties": {
                        "^(?!@context)(?!@id)(?!@type)(?!_templateId).*$": {
                            "type": "object",
                            "description": "The enum will contain exactly one URI for the field name",
                            "properties": {
                                "enum": { "type": "array", "minItems": 1, "maxItems": 1, "items": { "type": "string", "format": "uri" } }
                            },
                            "required": [ "enum" ]
                        }
                    },
                },
                "required": { "type": "array", "items": { "type": "string", "uniqueItems": true } },
                "additionalProperties": { "type": "boolean", "enum": [ false ] }
            },
            "required": [ "properties", "required", "additionalProperties" ]
        },
